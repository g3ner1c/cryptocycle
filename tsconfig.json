{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjS",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./build"
    },

    "include": ["**/*.ts"],

    "exclude": ["node_modules", "**/*.spec.ts"]
}
